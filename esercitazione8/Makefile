FILE_NAME_TEST=test
FILE_NAME_LIB = scl
FILE_NAME_ESERCIZIO=functions


all: $(FILE_NAME_TEST)

$(FILE_NAME_TEST): $(FILE_NAME_TEST).o $(FILE_NAME_ESERCIZIO).o $(FILE_NAME_LIB).o 
	g++ -o $(FILE_NAME_TEST) $(FILE_NAME_TEST).o $(FILE_NAME_ESERCIZIO).o $(FILE_NAME_LIB).o
$(FILE_NAME_TEST).o: $(FILE_NAME_TEST).c $(FILE_NAME_ESERCIZIO).h $(FILE_NAME_LIB).h
	g++ -c $(FILE_NAME_TEST).c

$(FILE_NAME_LIB).o: $(FILE_NAME_LIB).c $(FILE_NAME_LIB).h 
	g++ -c $(FILE_NAME_LIB).c -lm

$(FILE_NAME_ESERCIZIO).o: $(FILE_NAME_ESERCIZIO).c $(FILE_NAME_ESERCIZIO).h 
	g++ -c $(FILE_NAME_ESERCIZIO).c -lm


clean:
	rm -rf $(FILE_NAME_TEST).o $(FILE_NAME_TEST) $(FILE_NAME_ESERCIZIO).o $(FILE_NAME_LIB).o *~
